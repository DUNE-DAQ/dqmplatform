<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DUNE DQM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/vanillaSelectBox.css" />
    <script src="~/js/vanillaSelectBox.js"></script>
    <script src="~/js/plotly-latest.min.js"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Dune DQM</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">

                        @if (User.IsInRole("User"))
                        {
            <li class="dropdown">
                <a data-toggle="dropdown" href="#">
                    Displays
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Pannels" asp-action="Index">Panels</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="DataDisplays" asp-action="Index">Data displays</a>
                    </li>
                    @if (User.IsInRole("Administrator"))
                    {
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Analyses" asp-action="Index">Analyses</a>
    </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="AnalysisResults" asp-action="Index">Analysis results</a>
                        </li>}
                </ul>
            </li>}

                        &nbsp; &nbsp;
                @if (User.IsInRole("User"))
                {

                <li class="dropdown">
                    <a data-toggle="dropdown" href="#">
                        Variables Management
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="DataSources" asp-action="Index">Data sources</a>
                        </li>
                        @if (User.IsInRole("Administrator"))
                        { 
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Data" asp-action="Index">Data</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="DataTypes" asp-action="Index">Data types</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="SamplingProfiles" asp-action="Index">Display sampling profile</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="AnalysisSources" asp-action="Index">Analyses sources</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="AnalysisParameters" asp-action="Index">Analyses with parameters</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Parameters" asp-action="Index">Analyses parameters</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="AnalysisPannels" asp-action="Index">Analysis panels</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="AspRoles" asp-action="Index">Users management</a>
                        </li>
                        }
                    
                    </ul>
                </li>
                }

                        &nbsp; &nbsp;
                        @if (User.IsInRole("Administrator"))
                        {
            <li class="dropdown">
                <a data-toggle="dropdown" href="#">
                    Users Management
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="AspRoles" asp-action="Index">Users management</a>
                    </li>
                </ul>
            </li>}

                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - CERN - EP-DT-DI
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    @RenderSection("Scripts", required: false)
</body>



</html>
