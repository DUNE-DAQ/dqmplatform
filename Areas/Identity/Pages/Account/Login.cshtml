@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
   
    <section>
        <h4>Use an external service to login.</h4>
        <hr />
      
        
         
            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                <div>
                    <p>
                        @foreach (var provider in Model.ExternalLogins)
                        {
                            <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">CERN SSO</button>
                        }
                    </p>
                </div>
            </form>
    
    </section>
  
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
